source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.1'

# Use sqlite3 as the database for Active Record
gem 'rubocop'
gem 'hashie'
gem 'faraday'
gem 'faraday_middleware'
gem 'octokit'
gem 'pmap'
gem 'anima'
gem 'ops'
gem 'environs'

group :production do
  gem 'sqlite3'
end

group :test, :development do
  gem 'foreman'
  gem 'sqlite3'
  gem 'dotenv-rails'
  gem 'rspec-rails'
  gem 'approvals'
  gem 'pry'
  gem 'pry-remote'
  gem 'better_errors'
  gem 'binding_of_caller'
end

